form(name='venueForm', ng-submit="vm.submit(venueForm)", novalidate)
  md-toolbar
    .md-toolbar-tools
      h2(translate="VENUE.TITLE")
      span(flex='')
      md-button.md-icon-button(ng-click='vm.cancel()')
        md-icon(md-svg-icon='mdi:close', aria-label='Close dialog')

  md-dialog-content(layout-padding)
    .md-dialog-content.venue-form-content

      div(layout="row")
        md-input-container(flex=50)
          label(translate='VENUE.FORM.NAME')
          input(required, ng-model='vm.venue.name')

        md-input-container(flex=50)
          label(translate='VENUE.FORM.ADDRESS')
          input(required, ng-model='vm.venue.address')

      div(layout="column")
        md-input-container
          label(translate='VENUE.FORM.MAP_LINK')
          input(type="url", ng-model='vm.venue.mapUrl')

        md-input-container
          label(translate='VENUE.FORM.NOTE')
          textarea(ng-model='vm.venue.howTo', rows=4)

  md-dialog-actions(layout='row')
    span(flex='')
    md-button.md-raised(translate="BUTTONS.CANCEL", ng-click="vm.cancel()", aria-label='Cancel')
    md-button.md-raised.md-primary(type="submit", translate="BUTTONS.SAVE", ng-click="vm.save()", aria-label='Save venue')

